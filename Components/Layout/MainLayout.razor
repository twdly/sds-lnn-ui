@inherits LayoutComponentBase
@* @page "/" *@

<div class="page">
    <nav class="sidebar">
        <div class="header">
        <span class="website-title">Cyclone Detector</span>
    </div>
        <div class="nav-menu">
            <NavLink class="nav-item" href="/" Match="NavLinkMatch.All">
                <div class="nav-content">
                    <i class="bi bi-house"></i>
                    <span class="nav-text">Home</span>
                </div>
            </NavLink>
            <NavLink class="nav-item" href="/graphs">
                <div class="nav-content">
                    <i class="bi bi-bar-chart"></i>
                    <span class="nav-text">Graphs</span>
                </div>
            </NavLink>
            <NavLink class="nav-item" href="/input">
                <div class="nav-content">
                    <i class="bi bi-keyboard"></i>
                    <span class="nav-text">Input</span>
                </div>
            </NavLink>
            <NavLink class="nav-item" href="/about">
                <div class="nav-content">
                    <span class="nav-text">About</span>
                </div>
            </NavLink>
        </div>
    </nav>

    <main class="main-content">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
